<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Spinner background -->
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#F6F2F2"/> <!-- Grey color -->
            <size android:width="200dp" android:height="60dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Dropdown icon on the right -->
    <item android:drawable="@drawable/ic_dropdown_icon" android:gravity="right|center_vertical" android:width="24dp" android:height="24dp" android:right="8dp"/>
</layer-list>

